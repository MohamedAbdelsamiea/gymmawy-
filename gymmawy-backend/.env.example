# Environment variables template
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# App
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:4000

# Logging
LOG_LEVEL=debug

# Security
JWT_ACCESS_SECRET=your_jwt_access_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
COOKIE_SECRET=your_cookie_secret_here
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
JWT_ISSUER=gymmawy

# Email
SMTP_HOST=your_smtp_host
SMTP_PORT=465
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM=your_email@domain.com

# Payment Gateways
TABBY_API_KEY=your_tabby_key
TAMARA_API_KEY=your_tamara_key
INSTAPAY_API_KEY=your_instapay_key

# Shipping
OTO_API_KEY=your_oto_key

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security
BCRYPT_ROUNDS=12

# MaxMind for IP GeoLocation
MAXMIND_ACCOUNT_ID=your_maxmind_account_id
MAXMIND_LICENSE_KEY=your_maxmind_license_key

# Development Currency Override (optional)
# DEV_CURRENCY=EGP
